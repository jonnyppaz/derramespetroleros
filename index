  <meta charset="UTF-8">
  <title>Reporte de Evento</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <style>
    #map {
      height: 300px;
      margin-bottom: 15px;
    }
    form {
      max-width: 500px;
      margin: auto;
    }
    label, input, textarea, button {
      display: block;
      width: 100%;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

<h2 style="text-align:center;">Formulario de Reporte de Evento</h2>

<form id="eventoForm">
  <label>Título del evento:</label>
  <input type="text" id="titulo" required>

  <label>Descripción:</label>
  <textarea id="descripcion" required></textarea>

  <label>Fecha del evento:</label>
  <input type="date" id="fecha" required>

  <label>Ubicación del evento (selecciona en el mapa):</label>
  <div id="map"></div>

  <input type="hidden" id="lat">
  <input type="hidden" id="lng">

  <button type="submit">Enviar reporte</button>
</form>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<!-- Supabase JS -->
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2.38.3/dist/umd/supabase.min.js"></script>

<script>
  // Configuración de Supabase
  const SUPABASE_URL = 'https://ifofalnxospnvasapqcp.supabase.co';
  const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imlmb2ZhbG54b3NwbnZhc2FwcWNwIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTIzMzA2MTMsImV4cCI6MjA2NzkwNjYxM30.ju3sOjdhAtW2ug2XcYwAhj2jz4bCrzYS6QoAfCJNaa8';

  const supabase = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

  // Inicialización del mapa
  const map = L.map('map').setView([-0.2, -78.5], 6);
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '© OpenStreetMap'
  }).addTo(map);

  let marker;

  map.on('click', function(e) {
    const { lat, lng } = e.latlng;
    if (marker) {
      marker.setLatLng([lat, lng]);
    } else {
      marker = L.marker([lat, lng]).addTo(map);
    }
    document.getElementById('lat').value = lat;
    document.getElementById('lng').value = lng;
  });

  // Manejo del formulario
  document.getElementById('eventoForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const titulo = document.getElementById('titulo').value;
    const descripcion = document.getElementById('descripcion').value;
    const fecha = document.getElementById('fecha').value;
    const lat = parseFloat(document.getElementById('lat').value);
    const lng = parseFloat(document.getElementById('lng').value);

    if (isNaN(lat) || isNaN(lng)) {
      alert("Debes seleccionar una ubicación en el mapa.");
      return;
    }

    const { error } = await supabase
      .from('eventos')
      .insert([{ titulo, descripcion, fecha, lat, lng }]);

    if (error) {
      alert("Error al guardar el evento: " + error.message);
    } else {
      alert("Evento registrado correctamente.");
      document.getElementById('eventoForm').reset();
      if (marker) {
        map.removeLayer(marker);
        marker = null;
      }
    }
  });
</script>

</body>
</html>
